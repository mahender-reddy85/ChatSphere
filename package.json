{
  "name": "chatsphere",
  "homepage": "https://mahender-reddy85.github.io/ChatSphere",
  "private": true,
  "version": "1.0.0",
  "description": "A real-time chat application built with React, TypeScript, Node.js, Express, and Socket.IO",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "node scripts/cleanup.js",
    "clean:all": "npm run clean && cd frontend && npm run clean && cd ../backend && npm run clean",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d frontend/dist"
  },
  "dependencies": {
    "@google/genai": "^1.25.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "chat",
    "realtime",
    "websocket",
    "react",
    "typescript",
    "node",
    "express",
    "socket.io"
  ],
  "author": "",
  "license": "MIT"
}
